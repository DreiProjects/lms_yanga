$ANNOUNCEMENTS = $APPLICATION->FUNCTIONS->ANNOUNCEMENT_CONTROL->getAllRecords(true);

$allEvents = $APPLICATION->FUNCTIONS->EVENT_CONTROL->getAllRecords(true);
