    return strtotime($event->date_start) >= strtotime(date('Y-m-d'));
});

usort($EVENTS, function($a, $b) {
    return strtotime($a->date_start) - strtotime($b->date_start);
});

$EVENTS = array_slice($EVENTS, 0, 3);

